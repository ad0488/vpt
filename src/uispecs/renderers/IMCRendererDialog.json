// #package uispecs

// #section IMCRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "ISO Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 100,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Light direction:",
      "children": [
        {
          "type": "vector",
          "bind": "direction",
          "value": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Shader Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "shader_type",
          "options": [
            {
              "value": 0,
              "label": "None",
              "selected": false
            },
            {
              "value": 1,
              "label": "Lambert",
              "selected": false
            },
            {
              "value": 2,
              "label": "Phong",
              "selected": false
            },
            {
              "value": 3,
              "label": "BRDF",
              "selected": true
            }
          ]
        }
      ]
    },
    {
      "type": "field",
      "label": "Composition Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "comp_type",
          "options": [
            {
              "value": 0,
              "label": "Last",
              "selected": false
            },
            {
              "value": 1,
              "label": "Mix",
              "selected": true
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Multiple Scattering:",
      "children": [
        {
          "type": "field",
          "label": "Extinction:",
          "children": [
            {
              "type": "spinner",
              "bind": "extinction",
              "logarithmic": true,
              "value": 100,
              "min": 0,
              "step": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Scattering bias:",
          "children": [
            {
              "type": "slider",
              "bind": "bias",
              "value": 0,
              "min": -1,
              "max": 1,
              "step": 0.2
            }
          ]
        },
        {
          "type": "field",
          "label": "Majorant ratio:",
          "children": [
            {
              "type": "slider",
              "bind": "ratio",
              "value": 1,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Max bounces:",
          "children": [
            {
              "type": "spinner",
              "bind": "bounces",
              "value": 1,
              "min": 0
            }
          ]
        },
        {
          "type": "field",
          "label": "Steps:",
          "children": [
            {
              "type": "spinner",
              "bind": "mcm_steps",
              "value": 1,
              "min": 1
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}
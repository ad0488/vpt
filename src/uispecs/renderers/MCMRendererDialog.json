// #package uispecs

// #section MCMRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Extinction:",
      "children": [
        {
          "type": "spinner",
          "bind": "extinction",
          "logarithmic": true,
          "value": 100,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering bias:",
      "children": [
        {
          "type": "slider",
          "bind": "bias",
          "value": 0,
          "min": -1,
          "max": 1,
          "step": 0.2
        }
      ]
    },
    {
      "type": "field",
      "label": "Majorant ratio:",
      "children": [
        {
          "type": "slider",
          "bind": "ratio",
          "value": 1,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Max bounces:",
      "children": [
        {
          "type": "spinner",
          "bind": "bounces",
          "value": 8,
          "min": 0
        }
      ]
    },
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 16,
          "min": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "ISO blob & directional light:",
      "children": [
        {
          "type": "field",
          "label": "Directional light:",
          "children": [
            {
              "type": "checkbox",
              "bind": "light",
              "checked": false
            }
          ]
        },
        {
          "type": "field",
          "label": "Light direction:",
          "children": [
            {
              "type": "vector",
              "bind": "direction",
              "value": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Isovalue:",
          "children": [
            {
              "type": "spinner",
              "bind": "isovalue",
              "value": -1,
              "min": -1,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Color:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "color",
              "value": "#ddeeff"
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}
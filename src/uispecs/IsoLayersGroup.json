// #package uispecs

// #section IsoLayersGroup

{
  "type": "panel",
  "children": [
    {
      "type": "panel",
      "bind": "controlPanel"
    },
    {
      "type": "panel",
      "children": [
        {
          "type": "field",
          "label": "Enabled:",
          "children": [
            {
              "type": "checkbox",
              "bind": "enabled",
              "checked": true
            }
          ]
        },
        {
          "type": "field",
          "label": "Alpha:",
          "children": [
            {
              "type": "spinner",
              "bind": "alpha",
              "value": 1,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Isovalue:",
          "children": [
            {
              "type": "spinner",
              "bind": "isovalue",
              "value": 0.5,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Color:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "color",
              "value": "#ddeeff"
            }
          ]
        },
        {
          "type": "field",
          "label": "p:",
          "children": [
            {
              "type": "spinner",
              "bind": "p",
              "value": 500,
              "min": 0,
              "step": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Metallic:",
          "children": [
            {
              "type": "slider",
              "bind": "metalic",
              "value": 0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "f90:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "f90",
              "value": "#ffffff"
            }
          ]
        },
        {
          "type": "field",
          "label": "Specular Weight:",
          "children": [
            {
              "type": "slider",
              "bind": "specularWeight",
              "value": 1.0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "Alpha Roughness:",
          "children": [
            {
              "type": "slider",
              "bind": "alphaRoughness",
              "value": 0.08,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        }
      ]
    },
    {
      "type": "spacer",
      "bind": "spacer",
      "height": "1px"
    }
  ]
}